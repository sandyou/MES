@{
    @using System.Data;
    Layout=null;    
    DataTable Today_dt = (DataTable)ViewData["Today_Table"];
    DataTable History_dt = (DataTable)ViewData["History_Table"];
    DataTable dt = (DataTable)ViewData["Table"];
}
<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
<link rel="stylesheet" href="~/lib/bootstrap-4.3.1/dist/css/bootstrap.min.css"/>
<!-- Our Custom CSS -->
<link rel="stylesheet" href="~/css/style2.css"/>
<!-- Scrollbar Custom CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.min.css"/>
    <title>各類資訊</title>
</head>
<body>
    <!--產品道次資訊-->
    <div style="display:@ViewData["Product_dis"]">
        <div style="padding:20px;margin:0 auto;width:60%">
            <br>
            <table class="table table-hover table-pro">
                <tbody>
                    <tr>
                        <th>產品代號</th>
                        <td>@ViewData["ProductId"]</td>
                    </tr>
                    <tr>
                        <th>產品名稱</th>
                        <td>@ViewData["ProductName"]</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="line"></div>
        <h1 style="font-weight:bold;text-align:center">產品道次資訊</h1>
        <div id="Information_Product_Contet">
            <!-- <asp:DataGrid ID="datagrid_process" CssClass="table  table-hover" ></asp:DataGrid>    -->
            <table id="datagrid_process" class="table table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>道次編號</th>
                        <th>道次名稱</th>
                        <th>機台編號</th>
                        <th>機台名稱</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < dt.Rows.Count; i++)
                    {
                        <tr>
                            <td>@dt.Rows[i][0]</td>
                            <td>@dt.Rows[i][1]</td>
                            <td>@dt.Rows[i][2]</td>
                            <td>@dt.Rows[i][3]</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="line"></div>
    </div>

    <!--工令詳細當日及歷史資訊-->
    <div style="display:@ViewData["Order_dis"]">
        <div class="card" id="card">

            <div class="card-body" id="card-title">
                工令資訊
            </div>
            <div class="card-body" id="card-body">
                <div class="row" id="row">
                    <div class="col-sm">工令編號:@ViewData["Order"]</div>

                    <div class="col-sm">產品名稱:@ViewData["ProductName"]</div>
                </div>
                <div class="row" id="row">
                    <div class="col-sm">產品代號:@ViewData["ProductId"]</div>

                    <div class="col-sm">預計生產數量:1245</div>
                </div>
                <div class="row" id="row">
                    <div class="col-sm">預計開始時間:@ViewData["Exp_ST_Date"]</div>

                    <div class="col-sm">預計結束時間:@ViewData["Exp_End_Date"]</div>
                </div>
                <div class="row" id="row">
                    <div class="col-sm">實際開始時間:@ViewData["Exp_ST_Date"]</div>

                    <div class="col-sm">實際結束時間:</div>
                </div>
            </div>
        </div>
        <div id="Order_Nav">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="nav-link active" href="#">當日工令資訊</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">歷史工令資訊</a>
                </li>

            </ul>
        </div>
        <div id="Information_Order_Contet">
            <!-- <asp:DataGrid ID="datagrid_process" CssClass="table  table-hover" ></asp:DataGrid>    -->

            <!--當日工令資訊-->
            <table id="Today_Table" class="table table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>工令編號</th>
                        <th>產品名稱</th>
                        <th>作業人員</th>
                        <th>道次名稱</th>
                        <th>使用機台</th>
                        <th>目前使用時數(小時)</th>
                        <th>派工數量</th>
                        <th>生產數量</th>
                        <th>完成進度</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Today_dt.Rows.Count; i++)
                    {
                        <tr>
                            <td>@Today_dt.Rows[i][1]</td>
                            <td>@Today_dt.Rows[i][2]</td>
                            <td>@Today_dt.Rows[i][3]</td>
                            <td>@Today_dt.Rows[i][4]</td>
                            <td>@Today_dt.Rows[i][5]</td>
                            <td>0</td>
                            <td>@Today_dt.Rows[i][6]</td>
                            <td>0</td>
                            <td><div class=progress><div style="width:0%;background-color:red" aria-valuemax=100 aria-valuemin=0 aria-valuenow=0 role=progressbar class="red progress-bar"><span>0%</span></div></div></td>
                        </tr>
                    }
                </tbody>
            </table>
            <!--歷史工令資訊-->
            <table id="History_Table" class="table table-hover hide">
                <thead class="thead-light">
                    <tr>
                        <th>工令編號</th>
                        <th>產品名稱</th>
                        <th>作業人員</th>
                        <th>道次名稱</th>
                        <th>使用機台</th>
                        <th>派工數量</th>
                        <th>生產數量</th>
                        <th>開始作業時間</th>
                        <th>完成作業時間</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < History_dt.Rows.Count; i++)
                    {
                        <tr>
                            <td>@History_dt.Rows[i][1]</td>
                            <td>@History_dt.Rows[i][2]</td>
                            <td>@History_dt.Rows[i][3]</td>
                            <td>@History_dt.Rows[i][4]</td>
                            <td>@History_dt.Rows[i][5]</td>
                            <td>@History_dt.Rows[i][6]</td>
                            <td>@History_dt.Rows[i][6]</td>
                            <td>@History_dt.Rows[i][7]</td>
                            <td>@History_dt.Rows[i][8]</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
