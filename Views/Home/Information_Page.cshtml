                <th>機台編號</th>
                <th>機台名稱</th>                                      
                </tr>
            </thead>
            <tbody>
                    @for(int i =0;i<dt.Rows.Count;i++)
                    {
                        <tr>
                            <td>@dt.Rows[i][0]</td>
                            <td>@dt.Rows[i][1]</td>
                            <td>@dt.Rows[i][2]</td>
                            <td>@dt.Rows[i][3]</td>
                        </tr>
                    }
            </tbody>
        </table>
    </div>
