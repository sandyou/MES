@{
    ViewData["Title"]="機台資訊";    
    @using System.Data;    
    DataTable dt  = (DataTable)ViewData["Table"];   
}
   <table id="Staff_Table" class="table table-hover tablesorter">
        <thead class="thead-light">
            <tr>
            <th>機台編號</th>
            <th>機台名稱</th>
            <th>目前道次</th>
            <th>目前狀態</th>          
            </tr>
        </thead>
        <tbody>                          
               @for(int i=0;i<dt.Rows.Count;i++)
               {
                   <tr>
                       <td>@dt.Rows[i][0]</td>
                       <td>@dt.Rows[i][1]</td>
                       <td>@dt.Rows[i][2]</td>
                       <td>@dt.Rows[i][3]</td>                                              
                   </tr>
               }
        </tbody>
    </table>
    <div class="line"></div>